                <ControlPageLabel>Sensor id</ControlPageLabel>
            </State>
            <State id="serial">
                <ValueType>String</ValueType>
                <TriggerLabel>Sensor id</TriggerLabel>
                <ControlPageLabel>Sensor id</ControlPageLabel>
            </State>
            <State id="token_remaining">
                <ValueType>Integer</ValueType>
                <TriggerLabel>Sensor id</TriggerLabel>
                <ControlPageLabel>Sensor id</ControlPageLabel>
            </State>
            <State id="last_active">
                <ValueType>String</ValueType>
                <TriggerLabel>Sensor id</TriggerLabel>
                <ControlPageLabel>Sensor id</ControlPageLabel>
            </State>
            <State id="token_reset">
                <ValueType>String</ValueType>
                <TriggerLabel>Sensor id</TriggerLabel>
