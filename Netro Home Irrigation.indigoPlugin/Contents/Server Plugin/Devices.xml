            </State>
            <State id="time">
                <ValueType>String</ValueType>
                <TriggerLabel>Sensor id</TriggerLabel>
                <ControlPageLabel>Sensor id</ControlPageLabel>
            </State>
            <State id="api_last_active">
                <ValueType>String</ValueType>
